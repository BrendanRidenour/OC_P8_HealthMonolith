@model BookingViewModel<ConsultantAvailability<Date>, PatientCalendarDate>

<section id="consultants" class="section-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <h2 class="ser-title">Choose the date of your appointment</h2>
                <hr class="botm-line">
                <form method="post" asp-action="@nameof(BookingController.ScheduleTime)" asp-antiforgery="true">
                    <div class="form-group">
                        <label asp-for="Patient.Date">Available Dates</label><br />
                        <select asp-for="Patient.Date" required>
                            @foreach (var date in Model!.Data.Available)
                            {
                                <option value="@date.ToString()">@date.ToDateTime().ToString("D")</option>
                            }
                        </select>
                        <span asp-validation-for="Patient.Date"></span>
                    </div>
                    <button type="submit" class="btn" asp-action="@nameof(BookingController.SelectConsultant)">Back</button>
                    <button type="submit" class="btn btn-primary">Continue</button>
                    <input type="hidden" asp-for="Patient.FName" />
                    <input type="hidden" asp-for="Patient.LName" />
                    <input type="hidden" asp-for="Patient.Address1" />
                    <input type="hidden" asp-for="Patient.Address2" />
                    <input type="hidden" asp-for="Patient.City" />
                    <input type="hidden" asp-for="Patient.PostCode" />
                    <input type="hidden" asp-for="Patient.ConsultantId" />
                </form>
            </div>
        </div>
    </div>
</section>