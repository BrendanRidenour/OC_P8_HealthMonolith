@model Patient

<section id="patient" class="section-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <h2 class="ser-title">Please fill out your information</h2>
                <hr class="botm-line">
                <form method="post" asp-action="@nameof(BookingController.SelectConsultant)" asp-antiforgery="true">
                    <div class="form-group">
                        <label asp-for="FName">First Name</label><br />
                        <input asp-for="FName" required />
                        <span asp-validation-for="FName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LName">Last Name</label><br />
                        <input asp-for="LName" required />
                        <span asp-validation-for="LName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address1">Address Line 1</label><br />
                        <input asp-for="Address1" required />
                        <span asp-validation-for="Address1"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address2">Address Line 2</label><br />
                        <input asp-for="Address2" />
                        <span asp-validation-for="Address2"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="City"></label><br />
                        <input asp-for="City" required />
                        <span asp-validation-for="City"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PostCode">Postal Code</label><br />
                        <input asp-for="PostCode" required />
                        <span asp-validation-for="PostCode"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Continue</button>
                </form>
            </div>
        </div>
    </div>
</section>